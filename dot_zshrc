# Load GitHub CLI completion. To generate the completion script, run:
#   gh completion -s zsh > ~/.zsh/completion/gh.zsh && echo 'source ~/.zsh/completion/gh.zsh' >> ~/.zshrc
source ~/.zsh/completion/gh.zsh

# Add libpq into PATH
export PATH="/opt/homebrew/opt/libpq/bin:$PATH"

# https://linuxcommand.org/lc3_man_pages/cdh.html
# The variable CDPATH defines the search path for the directory containing
# DIR.  Alternative directory names in CDPATH are separated by a colon (:).
# A null directory name is the same as the current directory.  If DIR begins
# with a slash (/), then CDPATH is not used.
export CDPATH=".:~/src"

# Loading `.env` on VS Code embeded terminal
# https://medium.com/@viniciu_/automatically-loading-the-env-file-in-your-vs-code-embed-terminal-30b2b32447f7
if [[ "$TERM_PROGRAM" == "vscode" && -f ".env" ]]; then
  source .env
fi
