# Automatically activate virtual env
# https://dev.to/moniquelive/auto-activate-and-deactivate-python-venv-using-zsh-4dlm
python_venv() {
  MYVENV=./venv
  # when you cd into a folder that contains $MYVENV
  [[ -d $MYVENV ]] && source $MYVENV/bin/activate > /dev/null 2>&1
  # when you cd into a folder that doesn't
  [[ ! -d $MYVENV ]] && deactivate > /dev/null 2>&1
}
autoload -U add-zsh-hook
add-zsh-hook chpwd python_venv
python_venv

# codespell spell checker https://github.com/codespell-project/codespell
# Install with "pip install codespell"
alias codespell-e="codespell --check-filenames --skip '.git,.venv,htmlcov,vendor,node_modules,package-lock.json' --ignore-words-list 'equipments,exat,aks,wallthickness,incase,cips,te,datas,nd,ot,Marge,HasTable,nam,mEnt,aNull,TRE,dne,decorder,ue'"

# cspell spell checker https://github.com/streetsidesoftware/cspell
alias cspell-pw="cspell --gitignore --words-only --unique --config ~/.cspell.json '**/*.{go,py,md,mdx,txt}' | sort --ignore-case >> cspell-project-words.txt"

# typos spell checker https://github.com/crate-ci/typos
alias typos="typos --exclude '*vendor' --exclude 'go.mod' --exclude 'go.sum'"

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# The -K and -A flags are deprecated and have been replaced
# by the --apple-use-keychain and --apple-load-keychain
# flags, respectively.  To suppress this warning, set the
