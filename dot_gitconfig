[user]
	name = Oleksandr Redko
	email = oleksandr.red+github@gmail.com
[alias]
	st = status -s
	ci = commit
	commend = commit --amend
	br = branch -v
	co = checkout
	df = diff
	ds = diff --staged
	lg = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local
	ls = ls-files
	unstage = reset HEAD
	please = push --force-with-lease
	ri = rebase --interactive
	ft = fetch --prune
	pushmr = push -u origin HEAD -o merge_request.create -o merge_request.target=master -o merge_request.remove_source_branch
	pushmra = push -u origin HEAD -o merge_request.create -o merge_request.target=master -o merge_request.merge_when_pipeline_succeeds -o merge_request.remove_source_branch

	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
	ignore = update-index --skip-worktree
	unignore = update-index --no-skip-worktree
	ignored = !git ls-files -v | grep \"^S\"
	zip = "archive HEAD -o"

	# Delete outdated branches https://dillionmegida.com/p/delete-outdated-branches/
	del-merged = "!git fetch && git branch --merged | egrep -v 'master|dev|main|staging' | xargs git branch -d"

[color]
	ui = true
[color "status"]
	changed = blue normal
	untracked = red normal
	added = magenta normal
	updated = green normal
	branch = yellow normal bold
	header = white normal bold
[difftool]
	prompt = false
[push]
	default = current
[core]
	excludesFile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[merge]
	keepBackup = false
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	stripLeadingSymbols = true
[init]
	defaultBranch = main
[pull]
	rebase = true
[includeIf "gitdir:~/src/slb-swt.visualstudio.com/"]
	path = ~/.gitconfig-slb
[includeIf "gitdir:~/src/github.com/epam/"]
	path = ~/.gitconfig-github
[includeIf "gitdir:~/src/github.com/"]
	path = ~/.gitconfig-github
[http]
	cookiefile = ~/.gitcookies
