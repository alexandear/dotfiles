[user]
	name = Oleksandr Redko
	email = oleksandr.red+github@gmail.com
[alias]
	# https://gist.github.com/schacon/e9e743dee2e92db9a464619b99e94eff
	bb = !~/better-git-branch.sh
	br = branch -v
	ci = commit
	co = checkout
	commend = commit --amend
    # Remove tracking branches no longer on remote. See https://stackoverflow.com/a/33548037
	delmerged="!git fetch --prune --all && for branch in $(git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}'); do git branch -D $branch; done"
	df = diff
	ds = diff --staged
	ft = fetch --prune --all
    # Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
	ignore = update-index --skip-worktree
	ignored = !git ls-files -v | grep \"^S\"
	lg = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local
	ls = ls-files
	please = push --force-with-lease
	pushmr = push -u origin HEAD -o merge_request.create -o merge_request.target=master -o merge_request.remove_source_branch
	pushmra = push -u origin HEAD -o merge_request.create -o merge_request.target=master -o merge_request.merge_when_pipeline_succeeds -o merge_request.remove_source_branch
	reshard = reset --hard
	ri = rebase --interactive
	st = status -s
	sw = switch
	unignore = update-index --no-skip-worktree
	unstage = reset HEAD
	zip = "archive HEAD -o"

[color]
	ui = true
[color "status"]
	changed = blue normal
	untracked = red normal
	added = magenta normal
	updated = green normal
	branch = yellow normal bold
	header = white normal bold
[difftool]
	prompt = false
[push]
	default = current
[core]
	excludesFile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[merge]
	keepBackup = false
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[diff-so-fancy]
	stripLeadingSymbols = true
[init]
	defaultBranch = main
[pull]
	rebase = true
[includeIf "gitdir:~/src/slb-swt.visualstudio.com/"]
	path = ~/.gitconfig-slb
[includeIf "gitdir:~/src/slb-digital.visualstudio.com/"]
	path = ~/.gitconfig-slb
[includeIf "gitdir:~/src/github.com/"]
	path = ~/.gitconfig-github
[includeIf "gitdir:~/src/github.com/epam/**/.git"]
	path = ~/.gitconfig-epam
[http]
	cookiefile = ~/.gitcookies
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
